<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="net.proselyte.hibernate.example.model.Client" table="HIBERNATE_DEVELOPERS">
        <meta attribute="class-description">
            This class contains client's details.
        </meta>
        <id name="id" type="int" column="client_id">
            <generator class="native"/>
        </id>
        <property name="name" column="client_name" type="string"/>
    </class>
</hibernate-mapping>