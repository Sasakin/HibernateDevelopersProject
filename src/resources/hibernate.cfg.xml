        <property name="hibernate.connection.password">
            sas20132013
        </property>

        <!-- List of XML mapping files -->
        <mapping resource="Client.hbm.xml"/>
        <mapping resource="Company.hbm.xml"/>
        <mapping resource="Developer.hbm.xml"/>
